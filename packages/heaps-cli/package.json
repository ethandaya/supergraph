{
  "name": "@heaps/cli",
  "version": "0.0.1",
  "private": true,
  "main": "dist/cli-default.js",
  "types": "dist/cli-default.d.ts",
  "sideEffects": false,
  "bin": {
    "heaps": "dist/cli-default.js"
  },
  "files": [
    "/dist/**"
  ],
  "scripts": {
    "build": "rm -rf dist && tsup src/cli-*.ts --dts",
    "dev": "rm -rf dist && tsup src/cli-*.ts --watch",
    "lint": "TIMING=1 eslint src/**/*.ts* --fix",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "test": "jest"
  },
  "devDependencies": {
    "@heaps/common": "workspace:*",
    "@heaps/tsconfig": "workspace:*",
    "@jest/globals": "^29.3.1",
    "@swc/jest": "^0.2.24",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.11",
    "cac": "^6.7.14",
    "colorette": "2.0.19",
    "jest": "^29.3.1",
    "tslib": "^2.4.1",
    "tsup": "^6.5.0",
    "typescript": "4.9.3",
    "zod": "^3.20.2"
  },
  "dependencies": {
    "ts-morph": "^17.0.1",
    "@swc/core": "^1.3.27"
  },
  "jest": {
    "transform": {
      "^.+\\.(t|j)sx?$": ["@swc/jest"]
    },
    "roots": [
      "<rootDir>"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "moduleDirectories": [
      "node_modules"
    ]
  }
}
