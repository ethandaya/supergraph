{
  "name": "@heaps/cli",
  "version": "0.0.1",
  "private": true,
  "main": "dist/cli-default.js",
  "module": "dist/cli-default.mjs",
  "types": "dist/cli-default.d.ts",
  "sideEffects": false,
  "bin": {
    "heaps": "dist/cli-default.js"
  },
  "files": [
    "/dist/**"
  ],
  "scripts": {
    "build": "rm -rf dist && tsup src/cli-*.ts --dts --format esm,cjs",
    "dev": "rm -rf dist && tsup src/cli-*.ts --format esm,cjs --watch",
    "lint": "TIMING=1 eslint src/**/*.ts* --fix",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "test": "jest"
  },
  "devDependencies": {
    "@heaps/common": "workspace:*",
    "@heaps/tsconfig": "workspace:*",
    "@jest/globals": "^29.3.1",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.11",
    "cac": "^6.7.14",
    "colorette": "2.0.19",
    "jest": "^29.3.1",
    "ts-jest": "^29.0.3",
    "tslib": "^2.4.1",
    "tsup": "^6.5.0",
    "typescript": "4.9.3",
    "zod": "^3.20.2"
  },
  "dependencies": {
    "ts-morph": "^17.0.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "maxWorkers": 1
  }
}
